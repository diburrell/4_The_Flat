			android:label="@string/app_name">
		</activity>
		
		<activity android:name="com.stocktake.FourTheFlat.activities.SettingActivity"
			android:label="@string/app_name">
		</activity>
        
            <uses-library android:name="android.test.runner" /> 
            

    </application>
    

        
       <instrumentation 
        android:name="android.test.InstrumentationTestRunner" 
        android:targetPackage="com.stocktake" 
        android:label="stocktake" /> 

    <uses-permission
        android:name="android.permission.INTERNET" />
